   keywords = {CT imaging,HfO2 nanoassemblies,Intravenous injection,Large-scale and reproducible synthesis,Radiation therapy},
   pages = {119538},
   pmid = {31639541},
   publisher = {Elsevier},
   title = {Gram-scale synthesis of highly biocompatible and intravenous injectable hafnium oxide nanocrystal with enhanced radiotherapy efficacy for cancer theranostic},
   volume = {226},
   url = {https://doi.org/10.1016/j.biomaterials.2019.119538},
