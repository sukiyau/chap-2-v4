   doi = {10.1245/s10434-015-4665-2},
   journal = {Oncol},
   pages = {3356-3362},
   title = {Intraoperative Assessment of Final Margins with a Handheld Optical Imaging Probe During Breast-Conserving Surgery May Reduce the Reoperation Rate: Results of a Multicenter Study},
