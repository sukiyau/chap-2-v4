   doi = {10.1186/s12894-019-0470-8},
   issn = {14712490},
   issue = {1},
   journal = {BMC Urology},
   keywords = {Biochemical recurrence,Extent,Focal positive surgical margins,Positive surgical margins,Prostate cancer,Radical prostatectomy},
   pages = {1-8},
   pmid = {31092240},
