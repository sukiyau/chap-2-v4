   issn = {15737373},
   issue = {2},
   journal = {Journal of Neuro-Oncology},
   keywords = {Grey matter,Raman imaging,Raman spectroscopy,White matter},
   pages = {287-295},
   title = {Identification of regions of normal grey matter and white matter from pathologic glioblastoma and necrosis in frozen sections using Raman imaging},
   volume = {125},
   year = {2015},
}
