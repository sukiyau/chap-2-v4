   doi = {10.1016/j.tsf.2018.07.024},
   issn = {00406090},
   issue = {January},
   journal = {Thin Solid Films},
   keywords = {Biocompatibility,Dielectric,Hafnium oxide,Lab-on-a-chip,Microdevices,Optically transparent,Passivation,Thin film characterization},
   pages = {60-69},
   publisher = {Elsevier},
   title = {Electrical and chemical characterizations of hafnium (IV) oxide films for biological lab-on-a-chip devices},
